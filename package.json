{
	"name": "toolbar",
	"displayName": "ToolBar",
	"description": "toolbar",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration":[
			{
				"title": "ToolBar配置项",
				"properties": {
					"toolbar.color": {
						"type":"string",
						"default": "white",
						"description": "toolbar颜色"
					}
				}
			}
		],
		"commands": [
			{
				"command": "extension.helloWorld",
				"icon":{
					"light": "images/light/run.svg",
					"dark": "images/dark/run.svg"
				},
				"title": "运行基础命令"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "editorFocus",
					"command": "extension.helloWorld",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
